{
	"compilerOptions": {
		"target": "es2018",
		"module": "commonjs",
		"moduleResolution": "node",
		"sourceMap": true,
		"removeComments": false,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"noImplicitAny": true,
		"strict": true,
		"strictPropertyInitialization": true,
		"alwaysStrict": true,
		"rootDir": "./src",
		"outDir": "./build"
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"src/**/flycheck*"
	]
}
